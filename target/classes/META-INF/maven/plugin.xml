<?xml version="1.0" encoding="UTF-8"?>
<plugin>
  <name>phantomjs-qunit-runner Maven Mojo</name>
  <description>Sonatype helps open source projects to set up Maven repositories on https://oss.sonatype.org/</description>
  <groupId>net.kennychua</groupId>
  <artifactId>phantomjs-qunit-runner</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <goalPrefix>phantomjs-qunit-runner</goalPrefix>
  <isolatedRealm>false</isolatedRealm>
  <inheritedByDefault>true</inheritedByDefault>
  <mojos>
    <mojo>
      <goal>generate-html</goal>
      <description>Goal which runs QUnit tests in PhantomJs (by convention)</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <phase>test</phase>
      <implementation>net.kennychua.phantomjs_qunit_runner.QunitHtmlWrapperMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <threadSafe>false</threadSafe>
      <parameters>
        <parameter>
          <name>buildDirectory</name>
          <type>java.io.File</type>
          <required>false</required>
          <editable>true</editable>
          <description>Directory containing the build files</description>
        </parameter>
        <parameter>
          <name>jsSourceDirectory</name>
          <type>java.io.File</type>
          <required>true</required>
          <editable>true</editable>
          <description>Directory of JS src files to be tested.</description>
        </parameter>
        <parameter>
          <name>jsTestDirectory</name>
          <type>java.io.File</type>
          <required>true</required>
          <editable>true</editable>
          <description>Directory of JS test files.</description>
        </parameter>
      </parameters>
      <configuration>
        <buildDirectory implementation="java.io.File">${project.build.directory}</buildDirectory>
        <jsSourceDirectory implementation="java.io.File">${qunit.jssrc.directory}</jsSourceDirectory>
        <jsTestDirectory implementation="java.io.File">${qunit.jstest.directory}</jsTestDirectory>
      </configuration>
    </mojo>
    <mojo>
      <goal>test</goal>
      <description>Goal which runs QUnit tests in PhantomJs (by convention)</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <phase>test</phase>
      <implementation>net.kennychua.phantomjs_qunit_runner.PhantomJsQunitRunnerMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <threadSafe>false</threadSafe>
      <parameters>
        <parameter>
          <name>baseDirectory</name>
          <type>java.io.File</type>
          <required>false</required>
          <editable>true</editable>
          <description>Base directory of project/</description>
        </parameter>
        <parameter>
          <name>buildDirectory</name>
          <type>java.io.File</type>
          <required>false</required>
          <editable>true</editable>
          <description>Directory containing the build files</description>
        </parameter>
        <parameter>
          <name>ignoreFailures</name>
          <type>boolean</type>
          <required>false</required>
          <editable>true</editable>
          <description>Boolean to fail build on failure</description>
        </parameter>
        <parameter>
          <name>jsSourceDirectory</name>
          <type>java.io.File</type>
          <required>true</required>
          <editable>true</editable>
          <description>Directory of JS src files to be tested.</description>
        </parameter>
        <parameter>
          <name>jsTestDirectory</name>
          <type>java.io.File</type>
          <required>true</required>
          <editable>true</editable>
          <description>Directory of JS test files.</description>
        </parameter>
        <parameter>
          <name>mExcludes</name>
          <alias>excludes</alias>
          <type>java.lang.String[]</type>
          <required>false</required>
          <editable>true</editable>
          <description>Filenames of JS test files from the jsTestDirectory to exclude.</description>
        </parameter>
        <parameter>
          <name>pathToPhantomJs</name>
          <type>java.lang.String</type>
          <required>true</required>
          <editable>true</editable>
          <description>Optional path to PhantomJs executable</description>
        </parameter>
      </parameters>
      <configuration>
        <baseDirectory implementation="java.io.File">${basedir}</baseDirectory>
        <buildDirectory implementation="java.io.File">${project.build.directory}</buildDirectory>
        <ignoreFailures implementation="boolean" default-value="false">${maven.test.failure.ignore}</ignoreFailures>
        <jsSourceDirectory implementation="java.io.File">${qunit.jssrc.directory}</jsSourceDirectory>
        <jsTestDirectory implementation="java.io.File">${qunit.jstest.directory}</jsTestDirectory>
        <pathToPhantomJs implementation="java.lang.String">${phantomjs.path}</pathToPhantomJs>
      </configuration>
    </mojo>
  </mojos>
  <dependencies>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <type>jar</type>
      <version>2.0</version>
    </dependency>
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <type>jar</type>
      <version>2.1</version>
    </dependency>
  </dependencies>
</plugin>